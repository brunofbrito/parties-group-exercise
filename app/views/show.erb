<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="page-header">
        <h1>Parties Description</h1>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-9">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Date</th>
            <th>Attendees</th>
            <th class="td-actions">Actions</th>
          </tr>
        </thead>
          <tr>
            <td><%= @party.name %></td>
            <td><%= @party.address %></td>
            <td><%= @party.lat %></td>
            <td><%= @party.long %></td>
            <td><%= @party.starts_at %></td>
						<td><%= @party.attendee.count %></td>
            <td class="td-actions">
              <a href="/" class="btn">
                Back
              </a>
            </td>
          </tr>
      </table>
    </div>
  </div>
	<div class="row">
		<div class="col-sm-9">
			<table class="table">
				<thead>
					<th>Name</th>
					<th>Email</th>
					<th class="td-actions">Actions</th>
				</thead>
				<% @attendee.each do |attendee| %>
				<tr>
					<td><%= attendee.name %></td>
					<td><%= attendee.email %></td>
					<td><a href="<%= @party.id %>/<%= attendee.id %>/remove_attendee" class="btn">Delete</a></td>
				</tr>
			<% end %>
			</table>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-9">
			<h3>Add attendee to party</h3>
			<form action="add_attendee/<%= @party.id %>" method="post">
				<label for="name">Name</label>
				<input type="text" name="name">

				<label for="email">Email</label>
				<input type="email" name="email">

				<input type="submit" class="btn btn-default btn-success">
			</form>
		</div>
	</div>

</div>
