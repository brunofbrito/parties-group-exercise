<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="page-header">
        <h1>Parties</h1>
      </div>
      <p>
        
      </p>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-9">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Date</th>
            <th class="td-actions">Actions</th>
          </tr>
        </thead>
          <tr>
            <% @parties.each do |party| %>
            <td>
              <a href="/<%= party.id %>"><%= party.name %></a>
            </td>
            <td>
              <%= party.starts_at %>
            </td>
            
            <td class="td-actions">
              <a href="/<%= party.id %>/edit" class="btn">
                Edit
              </a>
              <a href="/<%= party.id %>" class="btn">
                Show
              </a>
              <form method="">
-                <button class="btn btn-danger">Remove</button>
              </form>
              <% end %>
            </td>
          </tr>
      </table>
    </div>
    <div class="col-sm-3">
      <div class="button-group">
        <a href="/?sort=asc" type="button" class="btn btn-default">
          <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>
          Order by year
        </a>
        <a href="/?sort=desc" type="button" class="btn btn-default">
          <span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span>
          Order by year
        </a>
      </div>
    </div>
  </div>
</div>
