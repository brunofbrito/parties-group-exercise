<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="page-header">
        <h1>Parties</h1>
      </div><!-- /page-header -->
    </div><!-- /.col-sm-12 -->
  </div><!-- /row -->

	<div class="row">
		<div class="col-lg-6">
			<form action="/search" methos="get" class="form-inline">
				<div class="input-group">
					<input type="text" class="form-control" placeholder="Search for...">
					<span class="input-group-btn">
						<button class="btn btn-default" type="button">Search!!</button>
					</span>
				</div><!-- /input-group -->
			</form><!-- /form -->
		</div><!-- /.col-lg-6 -->	
	</div><!-- /.row -->
	
	<a href="/new" class="btn btn-default btn-success">Create Party</a>

	<div class="row">
    <div class="col-sm-9">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Date</th>
            <th class="td-actions">Actions</th>
          </tr>
        </thead><!-- /thead -->
          <% @parties.each do |party| %>
          <tr>
            <td>
              <a href="/<%= party.id %>"><%= party.name %></a>
            </td>
            <td>
              <%= party.starts_at %>
            </td>

            <td class="td-actions">
              <a href="/<%= party.id %>/edit" class="btn">
                Edit
              </a>
              <a href="/<%= party.id %>" class="btn">
                Show
              </a>
                <a href="/<%= party.id %>/remove"><button class="btn btn-danger">Remove</button></a>
            </td>
          </tr>
          <% end %>
      </table><!-- /table -->
    </div><!-- /.col-sm-9 -->

    <div class="col-sm-3">
      <div class="button-group">
        <a href="/?sort=asc" type="button" class="btn btn-default">
          <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>
          Order by year
        </a>
        <a href="/?sort=desc" type="button" class="btn btn-default">
          <span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span>
          Order by year
        </a>
			</div><!-- /button-group -->
		</div><!-- /.col-sm-3 -->
	</div><!-- /.row -->
</div><!-- /.container -->
